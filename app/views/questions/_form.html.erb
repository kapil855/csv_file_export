        <%= form.label :answer %>
        <%= form.text_area :answer, rows: 5 , class: 'form-control'%>
      </div>
      <div class="actions">
        <%= form.submit class: 'btn-block btn-lg btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
