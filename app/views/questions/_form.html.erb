      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card w-50 m-auto mt-3">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
